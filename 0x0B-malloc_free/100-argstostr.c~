#include "main.h"
#include <stdlib.h>

/**
 * argstostr - Concatenates all arguments of the program
 * @ac: argument count
 * @av: pointer to size ac
 * Return: NULL if ac == 0 or av == null
 */

char *argstostr(int ac, char **av)
{
  int i, j, k, l;
  char *arg;
  size = 0;
  k = 0;
  if (ac == 0 || av == NULL)
    return (NULL);
  i = 0;
  while (i < ac)
    {
      j = 0;
      while (av[i][j])
	{
	  size++;
	  j++;
	}
    }
}
